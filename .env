# ============================================
# КОНФИГУРАЦИЯ БАЗЫ ДАННЫХ 3X-UI (X-UI)
# ============================================

# Тип БД: sqlite, postgresql, mysql, mariadb
XUI_DB_TYPE=sqlite

# Для SQLite
XUI_DB_PATH=x-ui.db

# Для PostgreSQL/TimescaleDB (раскомментируйте при использовании)
# XUI_DB_HOST=localhost
# XUI_DB_PORT=5432
# XUI_DB_NAME=xui
# XUI_DB_USER=postgres
# XUI_DB_PASSWORD=your_password

# Для MySQL/MariaDB (раскомментируйте при использовании)
# XUI_DB_HOST=localhost
# XUI_DB_PORT=3306
# XUI_DB_NAME=xui
# XUI_DB_USER=root
# XUI_DB_PASSWORD=your_password

